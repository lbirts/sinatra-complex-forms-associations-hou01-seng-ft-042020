<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="post">
<input type="hidden" name="_method" value="patch" />

<label>Name</label>
<p><input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>" /></p>

<label>Existing Owners:</label>
    <% @owners.each do |owner| %>
        <input type="radio" name="pet[owner_id]" value="<%=owner.id%>" id="<%= owner.id %>" <%="checked" if @pet.owner == (owner) %>><%=owner.name%>
    <% end %>

  <h3>New Owner</h3>
    <label>Owner Name: </label>
    <input type="text" name="owner[name]" id="owner_name"></input>
    <br><br>


<input type="submit" value="Update Pet">

</form>